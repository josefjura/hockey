# Database Configuration
DATABASE_URL=sqlite:./data/hockey_data.db

# JWT Authentication
HOCKEY_HMAC_KEY=your-very-secure-hmac-key-for-jwt-signing-should-be-long-and-random

# JWT RSA Keys (generated with ./scripts/generate_keys.sh)
JWT_PRIVATE_KEY_PATH=jwt_private.pem
JWT_PUBLIC_KEY_PATH=jwt_public.pem

# JWT Token Durations
JWT_ACCESS_TOKEN_DURATION_MINUTES=15
JWT_REFRESH_TOKEN_DURATION_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8080

# MinIO Storage Configuration (if needed)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=hockey-uploads

# For production, use stronger credentials:
# HOCKEY_HMAC_KEY=generate-a-very-long-random-string-at-least-32-characters
# MINIO_ACCESS_KEY=your-secure-access-key
# MINIO_SECRET_KEY=your-very-secure-secret-key-min-8-chars
