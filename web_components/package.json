{
  "name": "hockey-web-components",
  "version": "1.0.0",
  "description": "Web Components for Hockey Management App",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:prod": "tsc && yarn build:minify",
    "build:minify": "find ../static/js/components -name '*.js' -type f -exec sh -c 'esbuild \"$1\" --minify --outfile=\"$1\" --allow-overwrite' _ {} \\;",
    "watch": "tsc --watch",
    "clean": "rm -rf ../static/js/components/*.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "test-storybook",
    "test:watch": "test-storybook --watch",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"yarn build-storybook --quiet\" \"wait-on tcp:127.0.0.1:6006 && yarn test-storybook\""
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-links": "^10.1.10",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.24.2",
    "@storybook/web-components": "^10.1.10",
    "@storybook/web-components-vite": "^10.1.10",
    "concurrently": "^9.2.1",
    "esbuild": "^0.24.2",
    "msw": "^2.7.0",
    "msw-storybook-addon": "^2.0.4",
    "playwright": "^1.57.0",
    "storybook": "^10.1.10",
    "typescript": "^5.3.3",
    "vite": "^6.0.3",
    "wait-on": "^9.0.3"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
